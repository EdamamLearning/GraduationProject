<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="8dp"
    android:layout_marginVertical="8dp"
    app:cardBackgroundColor="@color/bg_color"
    app:cardCornerRadius="16dp"
    app:cardElevation="4dp">

    <RelativeLayout
        android:id="@+id/relative_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="8dp">

        <TextView
            android:id="@+id/food_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:alpha="0.9"
            android:includeFontPadding="false"
            android:textColor="@color/text_color"
            android:textSize="18sp"
            tools:text="#21" />

        <LinearLayout
            android:id="@+id/types_linear_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/food_id"
            android:layout_alignBottom="@id/food_id"
            android:layout_marginVertical="2dp"
            android:layout_marginEnd="4dp"
            android:layout_toStartOf="@id/food_image"
            android:layout_toEndOf="@id/food_id">

            <TextView
                android:id="@+id/protein"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginStart="2dp"
                android:layout_weight="1"
                android:alpha="0.9"
                android:background="@drawable/rounded_border"
                android:gravity="center"
                android:includeFontPadding="false"
                android:lines="1"
                android:paddingHorizontal="2dp"
                android:textColor="@color/text_color"
                app:autoSizeMaxTextSize="10sp"
                app:autoSizeMinTextSize="1sp"
                app:autoSizeStepGranularity="1sp"
                app:autoSizeTextType="uniform"
                tools:text="Белки:225г" />

            <TextView
                android:id="@+id/fat"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginStart="2dp"
                android:layout_weight="1"
                android:alpha="0.9"
                android:background="@drawable/rounded_border"
                android:gravity="center"
                android:includeFontPadding="false"
                android:lines="1"
                android:paddingHorizontal="2dp"
                android:textColor="@color/text_color"
                app:autoSizeMaxTextSize="10sp"
                app:autoSizeMinTextSize="1sp"
                app:autoSizeStepGranularity="1sp"
                app:autoSizeTextType="uniform"
                tools:text="Жиры:24г" />

            <TextView
                android:id="@+id/carb"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginStart="2dp"
                android:layout_weight="1"
                android:alpha="0.9"
                android:background="@drawable/rounded_border"
                android:gravity="center"
                android:includeFontPadding="false"
                android:lines="1"
                android:paddingHorizontal="2dp"
                android:textColor="@color/text_color"
                app:autoSizeMaxTextSize="10sp"
                app:autoSizeMinTextSize="1sp"
                app:autoSizeStepGranularity="1sp"
                app:autoSizeTextType="uniform"
                tools:text="Углеводы:125г" />

        </LinearLayout>

        <TextView
            android:id="@+id/label"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_below="@+id/types_linear_layout"
            android:layout_alignBottom="@id/label"
            android:layout_alignParentStart="true"
            android:layout_marginStart="0dp"
            android:layout_marginTop="8dp"
            android:layout_toStartOf="@id/category"
            android:alpha="0.9"
            android:gravity="center"
            android:minLines="1"
            android:textColor="@color/text_color"
            android:textStyle="bold"
            app:autoSizeTextType="uniform"
            tools:text="beacon" />

        <TextView
            android:id="@+id/category"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_below="@+id/types_linear_layout"
            android:layout_alignBottom="@id/label"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_toStartOf="@id/favorite_button"
            android:alpha="0.9"
            android:gravity="center"
            android:textColor="@color/text_color"
            android:textStyle="bold"
            app:autoSizeMaxTextSize="24sp"
            app:autoSizeMinTextSize="12sp"
            app:autoSizeStepGranularity="2sp"
            app:autoSizeTextType="uniform"
            tools:text="meat food" />

        <ToggleButton
            android:id="@+id/favorite_button"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/types_linear_layout"
            android:layout_alignBottom="@id/label"
            android:layout_marginStart="4dp"
            android:layout_toStartOf="@id/food_image"
            android:background="@null"
            android:checked="false"
            android:drawableBottom="@drawable/favorite_button_selector"
            android:drawablePadding="8dp"
            android:paddingHorizontal="8dp"
            android:paddingBottom="10dp"
            android:textSize="0sp" />

        <ImageView
            android:id="@+id/food_image"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="8dp"
            tools:src="@drawable/food" />

    </RelativeLayout>
</androidx.cardview.widget.CardView>