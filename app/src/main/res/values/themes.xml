<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.GraduationProject" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/primary</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="TextViewToolBar">
        <item name="android:textSize" tools:ignore="SpUsage">20dp</item>
        <item name="lineHeight">24dp</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="firstBaselineToTopHeight">19dp</item>
        <item name="lastBaselineToBottomHeight">5dp</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:letterSpacing">0.0</item>
    </style>

    <style name="CustomChipStyle" parent="Widget.MaterialComponents.Chip.Choice">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/chip_text_color_selector</item>
        <item name="chipBackgroundColor">@color/bottom_nav_background</item>
        <item name="chipStrokeColor">@color/chip_border_color_selector</item>
        <item name="chipStrokeWidth">1dp</item>
    </style>

    <style name="TextViewButtonStyle" parent="BaseTextBody1">
        <item name="android:textColor">@color/primary</item>
    </style>

    <style name="BaseTextBody1" parent="TextAppearance.AppCompat.Body1">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/black</item>
    </style>
</resources>